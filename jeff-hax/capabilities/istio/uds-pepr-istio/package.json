{
  "name": "uds-pepr-istio",
  "version": "0.0.1",
  "description": "A resusable Pepr Capability for the Istio service mesh for use with UDS.",
  "keywords": [
    "pepr",
    "k8s",
    "policy-engine",
    "pepr-module",
    "security"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "pepr": {
    "name": "UDS Pepr Istio",
    "uuid": "58f00076-0f6b-54ce-ae2a-96f970e2d689",
    "onError": "audit",
    "alwaysIgnore": {
      "namespaces": [],
      "labels": []
    }
  },
  "scripts": {
    "k3d-setup": "k3d cluster delete pepr-dev && k3d cluster create pepr-dev --k3s-arg '--debug@server:0'"
  },
  "dependencies": {
    "kubernetes-fluent-client": "^1.7.0",
    "pepr": "0.14.1"
  },
  "devDependencies": {
    "typescript": "5.2.2"
  }
}
